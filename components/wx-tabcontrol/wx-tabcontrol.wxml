<view class="tabs">
    <view class="tab_title">
        <view 
            wx:for="{{tabcontrol}}"
            wx:key="id"
            class="title_item {{item.isActive ? 'active':''}}"
            bind:tap="clickTabItem"
            data-index="{{index}}"
            >
            {{item.value}}
        </view>
    </view>
    <view class="tabs_content">
        <slot></slot>
    </view>
</view>